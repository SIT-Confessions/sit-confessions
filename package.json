{
  "name": "sit-confessions",
  "version": "1.0.0",
  "description": "Confessions web application built on MERN.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "cd frontend && npm start",
    "server": "cd backend && nodemon server.js",
    "installClient": "cd frontend && npm install",
    "installServer": "cd backend && npm install",
    "dev": "concurrently -n 'server,client' -c 'blue,green' \"npm run server\" \"npm run client\"",
    "install": "concurrently \"npm run installClient\" \"npm run installServer\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielkhh/sit-confessions.git"
  },
